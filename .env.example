# Document Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOC=5
EMBEDDING_BATCH_SIZE=50
MIN_CHUNK_LENGTH=10
MAX_FILE_SIZE=10485760
MAX_IMAGE_SIZE=5242880

# Vector Store Settings
VECTOR_STORE_TYPE=faiss
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/extendai
POSTGRES_COLLECTION_NAME=document_vectors
# if using Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=extendai

# Cache Settings
VECTOR_CACHE_DIR=cache/vectors
VECTOR_CACHE_TTL=7200

# Model API Settings
TARGET_MODEL_BASE_URL=https://api.openai.com 
TARGET_MODEL_API_KEY=your-target-model-api-key
OPENAI_BASE_URL=https://api.openai.com
OPENAI_API_KEY=your-openai-api-key

# Embedding API Settings
EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_API_KEY=your-embedding-api-key
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Search Settings
SEARXNG_URL=https://searx.example.com
DEFAULT_MODEL=deepseek-r1
SEARCH_ENGINE=google
SEARCH_RESULT_LIMIT=5
SEARCH_RESULT_MULTIPLIER=2
WEB_CONTENT_CHUNK_SIZE=512
WEB_CONTENT_CHUNK_OVERLAP=50
WEB_CONTENT_MAX_CHUNKS=5

# Proxy Settings (Optional)
PROXY_ENABLED=false
PROXY_HOST=proxy.example.com
PROXY_PORT=8080
PROXY_USERNAME=your-proxy-username
PROXY_PASSWORD=your-proxy-password

# Feature Switches
ENABLE_PROGRESS_MESSAGES=false
ENABLE_IMAGE_ANALYSIS=true
ENABLE_WEB_SEARCH=true
ENABLE_DOCUMENT_ANALYSIS=true

# Progress Messages (Customizable)
PROGRESS_MSG_IMAGE="Analyzing image content..."
PROGRESS_MSG_DOC="Analyzing document..."
PROGRESS_MSG_DOC_SEARCH="Searching document..."
PROGRESS_MSG_WEB_SEARCH="Searching web content..."

# Server Settings
PORT=8096
HOST=0.0.0.0